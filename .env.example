# Database
DATABASE_URL="postgresql://username:password@localhost:5432/alumni_network"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"

# Next.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Email configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="your-email@gmail.com"

# Application URL
APP_URL="http://localhost:3000"

# Optional: File upload (AWS S3 or similar)
S3_ENDPOINT="https://s3.amazonaws.com"
S3_REGION="us-east-1"
S3_BUCKET="your-bucket-name"
S3_ACCESS_KEY_ID="your-aws-access-key"
S3_SECRET_ACCESS_KEY="your-aws-secret-key"

# Optional: Redis (for caching/queues)
REDIS_URL="redis://localhost:6379"

# Optional: Stripe (for payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Optional: Enable email verification
ENABLE_EMAIL_VERIFICATION="false"

# Optional: Enable rate limiting
ENABLE_RATE_LIMITING="true"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="your-alumni-network-bucket"
